{
  "name": "electron-dev-webpack-plugin",
  "version": "1.0.4",
  "description": "A webpack plugin for electron development",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*",
    "screenshot.jpg"
  ],
  "scripts": {
    "dev": "tsc -p ./tsconfig.dev.json --watch",
    "build": "npm run lint && npm run clean && tsc",
    "lint": "eslint . --ext .js,.ts --fix",
    "clean": "rimraf lib"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cross-spawn": "^7.0.1",
    "portfinder": "^1.0.25",
    "tree-kill": "^1.2.2"
  },
  "peerDependencies": {
    "electron": ">=2"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.1",
    "@types/webpack": "^4.41.4",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "electron": "^6.1.7",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nashaofu/electron-dev-webpack-plugin.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "webpack",
    "plugin",
    "electron",
    "development"
  ],
  "author": "nashaofu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nashaofu/electron-dev-webpack-plugin/issues"
  },
  "homepage": "https://github.com/nashaofu/electron-dev-webpack-plugin#readme"
}
